    <span class="n">mArray</span> <span class="o">=</span> <span class="n">getIMGChangeFileArray</span><span class="p">(</span><span class="n">MDFile_path</span><span class="p">)</span>
    <span class="n">handleModifSource</span><span class="p">(</span><span class="n">mArray</span><span class="p">)</span>


