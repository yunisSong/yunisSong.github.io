    <span class="n">changeLastModifTime</span><span class="p">(</span><span class="n">nextModefiTime</span><span class="p">)</span>
    <span class="k">return</span> <span class="n">changeFileDirArray</span>

<span class="k">def</span> <span class="nf">get_FileModifyTime</span><span class="p">(</span><span class="n">filePath</span><span class="p">):</span>
